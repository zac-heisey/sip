<header id="menu">

  <div class="lock">

    <!-- SIP Logo -->
    <a href="/" class="logo">
      <img src="/assets/images/sip-logo-tr.png" alt="SIP logo">
    </a>

    <!-- Hamburger Menu Button (mobile-only) -->
    <button aria-expanded="false" aria-controls="main-menu" class="icon-menu">
      <span class="sr-only">Menu</span>
    </button>

    <!-- Main Menu (for accessible nesting, see https://codepen.io/zheisey/pen/dyPVVWQ) -->
    <nav id="main-menu">
      <!-- Primary Nav Items -->
      <ul class="primary-nav-items">
        {% for link in nav %}
        <li>
          {% if link.submenu.length > 0 %}
          <button aria-expanded="false">{{ link.name }} â–¼</button>
          <!-- Secondary Nav Items -->
          <ul class="secondard-nav-items">
            {% for link in link.submenu %}
            <li><a href="{{ link.url }}">{{ link.name }}</a></li>
            {% endfor %}
          </ul>
          {% else %}
          <a href="{{ link.url }}">{{ link.name }}</a>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </nav>

  </div>

</header>
