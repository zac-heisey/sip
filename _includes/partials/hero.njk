<section class="hero">

  <div class="lock">

    <div class="row">

      <!-- Hero block image -->
      <div class="container image">
        <div class="yellow-border"></div>
        {{ macro.imageSizes(block.image.source, block.image.altText) }}
      </div>

      <!-- Hero block text -->
      <div class="container text">
        <h2>{{ block.heading }}</h2>

        {% if block.subHeading %}
          <h3>{{ block.subHeading }}</h3>
        {% endif %}

        {% if '/posts/' in page.url %}
          <p class="post-date">{{ page.date.toDateString() }}</p>
        {% endif %}

        <!-- Hero block buttons (if any) -->
        {% if block.buttons.length > 0 %}
        <div class="buttons">
          {% for button in block.buttons %}
            <a href="{{ button.url }}" class="btn {{ button.color }}">{{ button.buttonText }}</a>
          {% endfor %}
        </div>
        {% endif %}
      </div>

    </div>

  </div>

</section>
