<section class="carousel">

  <div class="lock">

    <div class="row">

      {% for slide in block.slide %}

      <!-- Carousel block image -->
      <div class="container image">
        <div class="yellow-border"></div>
        {{ macro.imageSizes(slide.image.source, slide.image.altText) }}
      </div>

      <!-- Carousel block text -->
      <div class="container text">
        <div class="wrapper{% if slide.text.backgroundColor !== "none" %} {{ slide.text.backgroundColor }}{% endif %}">

          {{ slide.text.content | safe }}

          <!-- Hero block buttons (if any) -->
          {% if slide.text.buttons.length > 0 %}
          <div class="buttons">
            {% for button in slide.text.buttons %}
              <a href="{{ button.url }}" class="btn {{ button.color }}">{{ button.buttonText }}</a>
            {% endfor %}
          </div>
          {% endif %}

        </div>
      </div>

      {% endfor %}

    </div>

  </div>

</section>
